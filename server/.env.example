# Server environment variables (Render)
PORT=3002
NODE_ENV=production

# Required: MongoDB connection string
MONGODB_URI=

# Required: JWT secret for auth
JWT_SECRET=

# Required: your deployed frontend origin for CORS
# e.g. https://nilu-crochet.vercel.app
FRONTEND_URL=

# Optional: base URL where this API is reachable (used for absolute URLs if you implement it server-side)
# e.g. https://nilu-crochet-api.onrender.com
PUBLIC_BASE_URL=
